---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Austrindo Law Office - High Quality Legal Services" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans antialiased">
		<header class="bg-white shadow-sm sticky top-0 z-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center h-16">
					<div class="flex-shrink-0 flex items-center">
						<a href="/" class="text-2xl font-bold text-blue-900">Austrindo</a>
					</div>
					<nav class="hidden md:flex space-x-8">
						<a href="#about" class="text-gray-700 hover:text-blue-900 px-3 py-2 rounded-md text-sm font-medium">About</a>
						<a href="#services" class="text-gray-700 hover:text-blue-900 px-3 py-2 rounded-md text-sm font-medium">Services</a>
						<a href="#team" class="text-gray-700 hover:text-blue-900 px-3 py-2 rounded-md text-sm font-medium">Our Team</a>
						<a href="#contact" class="bg-blue-900 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-blue-800 transition">Contact Us</a>
					</nav>
				</div>
			</div>
		</header>
		<main>
			<slot />
		</main>
		<footer class="bg-gray-900 text-white py-12">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 md:grid-cols-3 gap-8">
				<div>
					<h3 class="text-lg font-semibold mb-4">Austrindo Law Office</h3>
					<p class="text-gray-400 text-sm">High Quality Legal Services for Indonesians & Foreigners.</p>
				</div>
				<div>
					<h3 class="text-lg font-semibold mb-4">Quick Links</h3>
					<ul class="space-y-2 text-sm text-gray-400">
						<li><a href="#about" class="hover:text-white">About Us</a></li>
						<li><a href="#services" class="hover:text-white">Services</a></li>
						<li><a href="#team" class="hover:text-white">Our Team</a></li>
					</ul>
				</div>
				<div>
					<h3 class="text-lg font-semibold mb-4">Contact</h3>
					<p class="text-gray-400 text-sm">Jakarta, Indonesia</p>
					<p class="text-gray-400 text-sm mt-2">info@austrindolawoffice.com</p>
				</div>
			</div>
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8 pt-8 border-t border-gray-800 text-center text-sm text-gray-500">
				&copy; {new Date().getFullYear()} Austrindo Law Office. All rights reserved.
			</div>
		</footer>
	</body>
</html>

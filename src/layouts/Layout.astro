---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Austrindo Law Office - High Quality Legal Services" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Google Fonts: Playfair Display (Luxury Serif) & Lato (Clean Sans) -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">
	</head>
	<body class="bg-stone-50 text-stone-900 font-sans antialiased flex flex-col min-h-screen">
		
		<!-- Top Bar (Contact Info) -->
		<div class="bg-slate-900 text-slate-300 text-xs py-2 hidden md:block border-b border-slate-800">
			<div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
				<div class="flex space-x-6">
					<span class="flex items-center gap-2"><svg class="w-3 h-3 text-amber-500" fill="currentColor" viewBox="0 0 20 20"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/></svg> info@austrindolawoffice.com</span>
					<span class="flex items-center gap-2"><svg class="w-3 h-3 text-amber-500" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/></svg> Kuta, Bali, Indonesia</span>
				</div>
				<div class="flex space-x-4">
					<a href="#" class="hover:text-white transition">Facebook</a>
					<a href="#" class="hover:text-white transition">LinkedIn</a>
				</div>
			</div>
		</div>

		<!-- Main Header -->
		<header class="bg-white shadow-sm sticky top-0 z-50 transition-all duration-300" id="navbar">
			<div class="max-w-7xl mx-auto px-6">
				<div class="flex justify-between items-center h-24">
					<!-- Logo -->
					<div class="flex-shrink-0 flex items-center">
						<a href="/" class="group flex flex-col justify-center">
							<span class="text-3xl font-serif font-bold text-slate-900 tracking-wide group-hover:text-amber-700 transition-colors duration-300 leading-none">AUSTRINDO</span>
							<span class="text-[10px] text-slate-500 uppercase tracking-[0.2em] font-medium mt-1 group-hover:text-slate-700 transition-colors">Law Office</span>
						</a>
					</div>
					
					<!-- Desktop Nav -->
					<nav class="hidden md:flex items-center space-x-1">
						<a href="/" class="text-stone-600 hover:text-amber-700 px-4 py-2 text-sm font-semibold uppercase tracking-wider transition-colors duration-300">Home</a>
						<a href="/#about" class="text-stone-600 hover:text-amber-700 px-4 py-2 text-sm font-semibold uppercase tracking-wider transition-colors duration-300">About</a>
						<a href="/services" class="text-stone-600 hover:text-amber-700 px-4 py-2 text-sm font-semibold uppercase tracking-wider transition-colors duration-300">Practice Areas</a>
						<a href="/team" class="text-stone-600 hover:text-amber-700 px-4 py-2 text-sm font-semibold uppercase tracking-wider transition-colors duration-300">Attorneys</a>
						<a href="/contact" class="ml-4 bg-slate-900 text-white px-6 py-3 rounded-none text-xs font-bold uppercase tracking-widest hover:bg-amber-700 transition-all duration-300 shadow-lg hover:shadow-amber-900/20">
							Contact Us
						</a>
					</nav>

					<!-- Mobile Menu Button -->
					<div class="md:hidden flex items-center">
						<button id="mobile-menu-btn" class="text-stone-800 hover:text-amber-700 focus:outline-none p-2 transition-colors">
							<svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
							</svg>
						</button>
					</div>
				</div>
			</div>

			<!-- Mobile Menu -->
			<div id="mobile-menu" class="hidden md:hidden bg-white border-t border-stone-100 absolute w-full shadow-xl">
				<div class="px-6 py-6 space-y-4">
					<a href="/" class="block text-lg font-serif font-medium text-stone-800 hover:text-amber-700">Home</a>
					<a href="/#about" class="block text-lg font-serif font-medium text-stone-800 hover:text-amber-700">About Firm</a>
					<a href="/services" class="block text-lg font-serif font-medium text-stone-800 hover:text-amber-700">Practice Areas</a>
					<a href="/team" class="block text-lg font-serif font-medium text-stone-800 hover:text-amber-700">Our Attorneys</a>
					<a href="/contact" class="block w-full text-center bg-slate-900 text-white py-3 mt-4 font-bold uppercase tracking-widest hover:bg-amber-700 transition-colors">Contact Us</a>
				</div>
			</div>
		</header>

		<main class="flex-grow">
			<slot />
		</main>

		<footer class="bg-slate-900 text-white py-20 border-t-4 border-amber-600">
			<div class="max-w-7xl mx-auto px-6 grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
				<div class="col-span-1 md:col-span-2 pr-8">
					<h3 class="text-3xl font-serif font-bold mb-6 text-white tracking-wide">AUSTRINDO</h3>
					<p class="text-slate-400 text-sm leading-7 max-w-md font-light mb-6">
						With over 20 years of expertise, we are trusted by foreign and local investors alike. We provide high-quality legal services tailored to the unique challenges of Indonesia's dynamic legal landscape.
					</p>
					<div class="flex space-x-4">
						<!-- Social Icons Placeholder -->
						<div class="w-10 h-10 bg-slate-800 rounded-full flex items-center justify-center text-slate-400 hover:bg-amber-600 hover:text-white transition-all cursor-pointer">FB</div>
						<div class="w-10 h-10 bg-slate-800 rounded-full flex items-center justify-center text-slate-400 hover:bg-amber-600 hover:text-white transition-all cursor-pointer">LI</div>
						<div class="w-10 h-10 bg-slate-800 rounded-full flex items-center justify-center text-slate-400 hover:bg-amber-600 hover:text-white transition-all cursor-pointer">IG</div>
					</div>
				</div>
				<div>
					<h3 class="text-sm font-bold uppercase tracking-widest mb-8 text-amber-500">Practice Areas</h3>
					<ul class="space-y-4 text-sm text-slate-300 font-light">
						<li><a href="/services" class="hover:text-white hover:translate-x-1 transform transition-all inline-block">Corporate & Business</a></li>
						<li><a href="/services" class="hover:text-white hover:translate-x-1 transform transition-all inline-block">Property Law</a></li>
						<li><a href="/services" class="hover:text-white hover:translate-x-1 transform transition-all inline-block">Immigration</a></li>
						<li><a href="/services" class="hover:text-white hover:translate-x-1 transform transition-all inline-block">Civil Litigation</a></li>
						<li><a href="/services" class="hover:text-white hover:translate-x-1 transform transition-all inline-block">Criminal Defense</a></li>
					</ul>
				</div>
				<div>
					<h3 class="text-sm font-bold uppercase tracking-widest mb-8 text-amber-500">Contact Office</h3>
					<div class="text-slate-300 text-sm space-y-6 font-light">
						<p class="flex items-start gap-4">
							<span class="mt-1 text-amber-500">üìç</span>
							<span>Jalan Raya Kuta No. 58 D-E<br>Kuta, Badung<br>Bali, Indonesia</span>
						</p>
						<p class="flex items-center gap-4">
							<span class="text-amber-500">‚úâÔ∏è</span>
							<a href="mailto:info@austrindolawoffice.com" class="hover:text-white transition-colors border-b border-slate-700 hover:border-white pb-0.5">info@austrindolawoffice.com</a>
						</p>
						<p class="flex items-center gap-4">
							<span class="text-amber-500">üìû</span>
							<a href="tel:+628170902111" class="hover:text-white transition-colors border-b border-slate-700 hover:border-white pb-0.5">+62 817 090 2111</a>
						</p>
					</div>
				</div>
			</div>
			<div class="max-w-7xl mx-auto px-6 pt-8 border-t border-slate-800 text-center text-xs text-slate-600 uppercase tracking-widest">
				&copy; {new Date().getFullYear()} Austrindo Law Office. All rights reserved.
			</div>
		</footer>

		<script>
			const btn = document.getElementById('mobile-menu-btn');
			const menu = document.getElementById('mobile-menu');

			btn?.addEventListener('click', () => {
				menu?.classList.toggle('hidden');
			});
		</script>
		<style is:global>
			/* Typography Defaults */
			h1, h2, h3, h4, h5, h6 {
				font-family: 'Playfair Display', serif;
			}
			body {
				font-family: 'Lato', sans-serif;
			}
			/* Custom selection color */
			::selection {
				background-color: #d97706; /* Amber-600 */
				color: white;
			}
		</style>
	</body>
</html>
